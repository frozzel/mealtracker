<div class="card" id="<%= dom_id entry %>">
  
    <header class="card-header hero is-info">
      <p class="card-header-title has-text-white">
        <strong class="is-capitalized" >
         <%= entry.meal_type %></strong>
      </p>
    </header>
 

 <div class=" card-content">
    <div class="content">
    <p>
      <strong>Calories:</strong>
      <%= entry.calories %>
    </p>
    <p>
       <strong>Proteins:</strong>
       <%= entry.proteins %>
    </p>
    <p>
        <strong>Carbohydrates:</strong>
        <%= entry.carbohydrates %>
    </p>
    <p>
        <strong>Fats:</strong>
        <%= entry.fats %>
    </p>
    <p class="italic">Logged at: <%= time_ago_in_words(entry.created_at) %> ago</p>
        
    </p>
    </div>
  </div>
  <footer class="card-footer">
    <a href="<%= entry_path(entry) %>" class="card-footer-item">Show</a>
    <a href="<%= edit_entry_path(entry) %>" class="card-footer-item">Edit</a>
    
  </footer>

</div>
