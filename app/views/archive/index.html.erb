<div class="columns is-centered mt-6">
    <div class="column is-half">
        <% @entries.each do |day, entries| %>
            <h3 class="is-size-4 has-text-weight-bold mb-4 has-text-centered">Entries for <%= day%></h3>
                    <nav class="level is-mobile">
                        <div class="level-item has-text-centered">
                            <div>
                                <strong class="heading ">Calories</strong>
                                <p class="title "><%= entries.pluck(:calories).sum %></p>
                            </div>
                        </div>
                        <div class="level-item has-text-centered">
                            <div>
                                <strong class="heading ">Proteins</strong>
                                <p class="title "><%= entries.pluck(:proteins).sum %>g</p>
                            </div>
                        </div>
                        <div class="level-item has-text-centered">
                            <div>
                                <strong class="heading ">Carbohydrates</strong>
                                <p class="title "><%= entries.pluck(:carbohydrates).sum %>g</p>
                            </div>
                        </div>
                        <div class="level-item has-text-centered">
                            <div>
                                <strong class="heading ">Fats</strong>
                                <p class="title "><%= entries.pluck(:fats).sum %>g</p>
                            </div>
                        </div>
                    </nav>



            <% entries.each do |entry| %>
                <%= link_to entry_path(entry) do %>
                    <div class="card mb-2" >
                      
                        <div class="card-content" >
                            <div class="content">
                             
                                    <strong class="is-capitalized">
                                    <%= entry.meal_type %></strong>
                                
                                    <br>
                                    <span>Calories:</span>
                                    <span><%= entry.calories %></span>
                                
                                    <span>Proteins:</span>
                                    <span><%= entry.proteins %></span>
                                
                                    <span>Carbohydrates:</span>
                                    <span><%= entry.carbohydrates %></span>
                               
                                    <span>Fats:</span>
                                    <span><%= entry.fats %></span>
                                
                            </div>
                        </div>
                    </div>
                <% end %>
            <% end %>
        <% end %>

    </div>
</div>